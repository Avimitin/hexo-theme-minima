<div class="latest-blog-list">
	<% site.posts.sort('date', 'desc').forEach(function(post){ %>
	<div class="latest-blog">

			<a class="latest-blog-title" href="<%- url_for(post.path) %>" >
				<% if (post.title == "") { %>
					no title
				<% } else { %>
					<%- post.title %>
				<% } %>
			</a>

			<p class="latest-blog-info">// <%- full_date(post.date, 'll') %> by <%- config.author %></p>

	</div>
	<% }) %>
</div>
